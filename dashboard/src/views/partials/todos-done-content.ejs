<%- include('breadcrumbs', { breadcrumbs: typeof breadcrumbs !== 'undefined' ? breadcrumbs : [] }) %>
<h1>Completed Todos</h1>

<p><a href="/todos"
      hx-get="/todos"
      hx-target="#main-content"
      hx-push-url="true">Back to Pending Todos</a></p>

<% if (todos.length > 0) { %>
<article>
  <div class="table-wrap">
  <table>
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Priority</th>
        <th scope="col">Phase</th>
        <th scope="col">Completed</th>
      </tr>
    </thead>
    <tbody>
      <% todos.forEach(function(todo) { %>
      <tr>
        <td><%= todo.id %></td>
        <td><%= todo.title %></td>
        <td>
          <% if (todo.priority) { %>
          <span class="status-badge" data-priority="<%= todo.priority %>">
            <%= todo.priority %>
          </span>
          <% } %>
        </td>
        <td><%= todo.phase %></td>
        <td><%= todo.completedAt || '' %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  </div>
</article>
<% } else { %>
<%- include('empty-state', { icon: 'âœ“', title: 'No completed todos', action: '<p><a href="/todos" hx-get="/todos" hx-target="#main-content" hx-push-url="true">View pending todos</a></p>' }) %>
<% } %>
